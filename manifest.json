{
  "manifest_version": 2,
  "name": "Highlighter",
  "short_name": "Highlighter",
  "author": "random guys",
  "version": "0.0.1",

  "description": "Lets you highlight stuff and do things.",

  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128_chrome.png"
  },

  "permissions": [
    "contextMenus",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"],
      "css": ["resources/static.css"],
      "run_at": "document_end"
    }
  ]
}